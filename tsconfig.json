{
	"compilerOptions": {
		"moduleResolution": "node",
		"rootDir": "./ts/",
		"outDir": "./js/",
		"removeComments": true,
		"sourceMap": true,
		"declaration": true,
		"esModuleInterop": true,
		"target": "ES5",
		"alwaysStrict": true,
		"pretty": true
	},
	"exclude": ["scripts/*", "scripts/**/*"]
}
